<Page
    x:Class="Meal_Match.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Media="using:Microsoft.Xaml.Interactions.Media"
    xmlns:controls="using:Template10.Controls"
    xmlns:local="using:Meal_Match.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Meal_Match.ViewModels"
    mc:Ignorable="d">

   <!-- <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>-->

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <RelativePanel Grid.Column="0" Background="Black">
            <TextBlock x:Name="ResultsPanel"
                       Margin="24,24,24,0"
                       Style="{StaticResource HeaderTextBlockStyle}"
                       Foreground="DarkGreen"
                       Text="Results"  />
            <ListView IsItemClickEnabled="True"
                      ItemClick="ListView_ItemClick"
                      ItemsSource="{Binding Restaurants}"
                      RelativePanel.AlignBottomWithPanel="True"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                      RelativePanel.Below="ResultsPanel"
                      SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="24,12,12,12" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <RelativePanel>
                            <Image x:Name="Image"
                                   Height="56"
                                   Margin="0,0,12,0"
                                   Source="{Binding Thumbnail}" />
                            <TextBlock x:Name="Name"
                                       FontSize="24"
                                       Padding="0,0,8,0"
                                       RelativePanel.RightOf="Image"
                                       Text="{Binding Name}"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock x:Name="Address"
                                       RelativePanel.Below="Name"
                                       RelativePanel.RightOf="Image"
                                       Text="{Binding Address}" />
                            <TextBlock x:Name="Price"
                                       RelativePanel.RightOf="Image"
                                       RelativePanel.Below="Address"
                                       Text="{Binding Price}" />

                        </RelativePanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
         </RelativePanel>

        <RelativePanel Grid.Column="2" Background="Blue">
            
        </RelativePanel>

        <RelativePanel Grid.Column="3" Background="DarkRed">

        </RelativePanel>


    </Grid>
</Page>
